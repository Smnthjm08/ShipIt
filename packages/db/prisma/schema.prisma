generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String   @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions Session[]
  accounts Account[]
  projects Project[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  accessToken           String? // important for octakit
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String    @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

enum Framework {
  NEXTJS
  REACT
  VITE
  NODE
  NONE
}

model Project {
  id             String     @id @default(cuid())
  name           String
  description    String?
  repoUrl        String
  owner          String
  repoName       String
  branch         String     @default("main")
  framework      Framework? @default(NONE)
  buildCommand   String?
  outputDir      String?
  rootDir        String?    @default("./")
  installCommand String?    @default("npm install")
  isDeleted      Boolean    @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  deployments Deployment[]

  @@map("project")
}

enum DeploymentStatus {
  QUEUED
  CLONING
  BUILDING
  FAILED
  COMPLETED
}

model Deployment {
  id        String           @id @default(cuid())
  projectId String
  status    DeploymentStatus @default(QUEUED)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  isDeleted Boolean          @default(false)

  project Project         @relation(fields: [projectId], references: [id])
  logs    DeploymentLog[]

  @@map("deployment")
}

model DeploymentLog {
  id           String   @id @default(cuid())
  deploymentId String
  message      String
  timestamp    DateTime @default(now())
  isDeleted    Boolean  @default(false)

  deployment Deployment @relation(fields: [deploymentId], references: [id], onDelete: Cascade)

  @@map("deployment_log")
}
